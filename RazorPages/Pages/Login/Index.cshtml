@page
@model IndexModel

@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm()) {
            <div class="form-group">
                @Html.Label("Login")
                @Html.Editor("Login")
            </div>
            <div class="form-group">
                @Html.Label("Password")
                @Html.Password("Password")
            </div>

            @Html.ValidationSummary()

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary"/>
            </div>
        }
    </div>
</div>