@model IEnumerable<Models.User>

@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Mvc.Program> Localizer

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer

@{
    var title = "Users";
    //ViewData["Title"] = title;
    ViewBag.Title = title;
}

<h2>@(string.IsNullOrWhiteSpace(title) ? "none" : title)</h2>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayName(Localizer[nameof(Models.User.Login)])
                </th>
                <th>
                    @ViewLocalizer[Html.DisplayNameFor(model => model.Password)]
                    @* @ViewLocalizer["<i>Hello, {0}</i>", nameof(Models.User.Password)] *@
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(_ => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.Password)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>